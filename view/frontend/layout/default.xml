<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magezil_AjaxLogin::css/custom_popup_style.css" />
    </head>
    <body>
        <referenceBlock name="authorization-link-login">
            <arguments>
                <argument name="class" xsi:type="string">custom-ajax-login-popup</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Customer\Block\Account\AuthenticationPopup" name="customer-popup-login" template="Magezil_AjaxLogin::login-popup.phtml" />
        </referenceContainer>
    </body>
</page>
